@model IEnumerable<ZJUCoursera1.DAL.Course>

@{
    ViewBag.Title = "现有课程";
}

<h2>现有课程</h2>

<p>
    @Html.ActionLink("创建课程", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject.Subject1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weekday.Weekday1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teacher)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Intro)
        </th>
