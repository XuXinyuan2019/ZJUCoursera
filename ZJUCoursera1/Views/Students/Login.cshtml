@model ZJUCoursera1.Models.LoginModel
@{
    ViewBag.Title = "学生登录";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
    <fieldset>
        <legend>学生登录</legend>
        <table>
            <tr>
                <td style="width:5em;">@Html.LabelFor(m => m.Number)</td>
                <td>
                    @Html.EditorFor(m => m.Number, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Number)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Password)</td>
                <td>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.RememberMe)</td>
                <td>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.ValidationMessageFor(m => m.RememberMe)
                </td>
            </tr>
            <tr><td colspan="2"><hr /></td></tr>
            <tr>
                <td><input type="submit" value="登录" class="btn btn-default" /></td>
                <td>@Html.ActionLink("注册", "Registe") 如果你没有帐户。</td>
            </tr>
        </table>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
